<h1>Editing Books</h1>
<%= form_with model:@book,url:book_path(@book.id),method: :patch do |f| %> 

<div class="field">
  <p="book_title">Title</p>
  <%= f.text_field :title %>
</div>

<div class="field">
  <p="book_body">Body</p>
  <%=f.text_area :body %>
</div>

<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show",book_path(@book.id) %>
