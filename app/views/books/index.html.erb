<html>
<head>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>  

<body>
  <p id="notice"></p>
  <h1>Books</h1>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <td>
        <%= f.text_area :body %>
      </td>
      <td>
        <%= f.text_field :title %>
      </td>
      
    </tbody>
  </table>
  <!-- テーブルを作って一覧表にするのはできそう-->
  <!-- eachか何かでbookからdataを取り出す構文を作成-->
  
  
  <h2>New Book</h2>
  <%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field:title %>
  
  <p>Body</p>
  <%=f.text_area :body %>
  
  <%=f.submit 'Create Book' %>
  <% end %>
  
</body>
</html>